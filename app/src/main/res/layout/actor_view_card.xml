<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <com.jackandphantom.circularimageview.CircleImage
        android:id="@+id/img_actor_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/actor"
        app:layout_constraintBottom_toTopOf="@+id/tv_actor_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_actor_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="@color/off_white"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
